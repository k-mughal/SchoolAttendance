@model IEnumerable<SchoolAttendance.Models.Student>

@{
    ViewBag.Title = "Student Detail";
}
<h2>Student List</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm(FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th>
                Student ID
            </th>
            <th>
                Frist Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
               Address
            </th>
            <th>
                Attending Class
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
 
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FristName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    
                    @Html.DisplayFor(modelItem => item.Class.Name)
                </td>

                @*<td>

                        <form action="Create" method="post">
                            // <input type="checkbox" id="IsPresent" checked="checked" value="true" />
                            <input type="submit" value="Create" class="btn btn-default" />

                        </form>
                    </td>*@
                

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StudentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StudentID })
                </td>
            </tr>
        }

    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}